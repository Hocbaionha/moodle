<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="theme/classon/db" VERSION="20180625" COMMENT="XMLDB file for Classon theme - Tesmonial"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
<TABLES>
  <TABLE NAME="classon_tesmonial" COMMENT="Classon Tesmonial">
    <FIELDS>
      <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
      <FIELD NAME="sequence" TYPE="int" LENGTH="3" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="user_id" TYPE="char" LENGTH="12" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="user_name" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="user_title" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="path_to_image" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="user_comment" TYPE="char" LENGTH="700" NOTNULL="true" SEQUENCE="false"/>
      
    </FIELDS>
    <KEYS>
      <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
    </KEYS>
  </TABLE>

  <TABLE NAME="classon_course_desc" COMMENT="Classon Course Description">
    <FIELDS>
      <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
      <FIELD NAME="sequence" TYPE="int" LENGTH="3" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="course_category_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="course_name" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="course_sub_title" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="course_desc" TYPE="text" NOTNULL="false" SEQUENCE="false" />
      <FIELD NAME="path_to_image" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="path_to_video" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="start_time" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="duartion_time" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="level" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="txt_start" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="txt_time" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      <FIELD NAME="productid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      <FIELD NAME="comment_href" TYPE="char" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
    </FIELDS>
    <KEYS>
      <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
    </KEYS>
  </TABLE>
  <TABLE NAME="hbon_add_info_user" COMMENT="Additional information for user">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="has_confirm" TYPE="int" LENGTH="1" DEFAULT="0" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="signup_token" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="signup_type" TYPE="char" LENGTH="12" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="signup_expiration" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="signup_method" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="signup_info" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="otp_number" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
  </TABLE>


</TABLES>
</XMLDB>
