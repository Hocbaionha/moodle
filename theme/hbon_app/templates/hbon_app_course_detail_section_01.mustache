<div class="single-thumb-vertical main-container shop-page no-sidebar">
    <div class="container">
        <div class="row">
            <div class="main-content col-md-12">
                <div id="course-00">
                    <div class="main-contain-summary">
                        <div class="contain-left has-gallery container">
                            <div class="row">
                                <div class="single-left video-course-detail col-md-6">
                                    <div class="img">

                                        <img id="iplayerdt" alt="Hocbaionha" src="{{{ config.wwwroot }}}/local/school/image.php?filename={{{course_desc.introduce_img}}}">
                                    </div>
                                </div>
                                <div class="summary entry-summary col-md-5">
                                    <div style="font-size: 32px;line-height: 30px;margin:10px;font-weight: bold;">
                                        {{{coursename}}}</div>
                                    <div class="introduct_desc">
                                         {{{course_desc.introduce_desc}}}
                                    </div>
                                    <div class="row">
                                        <div class="col-3">
                                            Học phí:
                                        </div>
                                        <div class="col-9 price">
                                        {{! <a href="/?page=shop"> }}
                                            {{{course_desc.price}}}
                                            {{! </a> }}
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div class="button-area ">
                                            <a href="{{{coursehref}}}">
                                            <div class="course-detail-button">
                                            <b>{{{coursehrefbutton}}}</b>
                                            </div></a>
                                        </div>
                                        
                                        <div class="button-area1 ">
                                            {{#coursehrefbutton1}}
                                            <a href="{{{coursehref1}}}">
                                            <div class="course-detail-button">
                                            <b>{{{coursehrefbutton1}}}</b>
                                            </div></a>
                                            {{/coursehrefbutton1}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="furgan-tabs furgan-tabs-wrapper">
                        <ul class="tabs dreaming-tabs" role="tablist">
                            <li class="description_tab active" id="tab-title-summary" role="tab"
                                aria-controls="tab-description">
                                <a class="a-course-detail" href="#tab-summary" data-toggle="tab">Tổng quan</a>
                            </li>
                            <li class="additional_information_tab" id="tab-title-course" role="tab"
                                aria-controls="tab-additional_information">
                                <a class="a-course-detail" href="#tab-course" data-toggle="tab">Chương trình học</a>
                            </li>
                            <li class="reviews_tab " id="tab-title-teacher" role="tab" aria-controls="tab-reviews">
                                <a class="a-course-detail" href="#tab-teacher" data-toggle="tab">Giáo viên</a>
                            </li>
                        </ul>
                        <div class="furgan-Tabs-panel furgan-Tabs-panel--description panel entry-content furgan-tab"
                            id="tab-summary" role="tabpanel" aria-labelledby="tab-title-description"
                            style="display: block;">
                            {{{ summary}}}
                        </div>
                        <div class="furgan-Tabs-panel furgan-Tabs-panel--additional_information panel entry-content furgan-tab"
                            id="tab-course" role="tabpanel" aria-labelledby="tab-title-additional_information"
                            style="display: none;">
                            <div class="tab-pane fade bg-white p-lg-5 active show" id="tab-default-chuong-trinh-hoc">
                                <div class="row">
                                {{#topic}}
                                    <div class="col-md-6  course-block">
                                        <a href="course/view.php?id={{{courseid}}}" data-tippy-content="{{name}}"  ><b>{{{sname}}}</b>{{# free}}<img src="{{{ config.wwwroot }}}/theme/hbon_app/pix/mienphi.png" style="height:36px; width:auto;"/> {{/ free}}</a>
                                        <ul class="nav nav-pills">
                                            {{# children}}

                                            <li class="nav-item" style="width:100%">
                                                <a class="nav-link"
                                                    href="course/view.php?id={{{courseid}}}#section-{{{section}}}"  data-tippy-content="{{name}}">{{sname}}{{# free}}<img src="{{{ config.wwwroot }}}/theme/hbon_app/pix/mienphi.png" style="height:36px; width:auto;"/> {{/ free}}</a>
                                                    
                                            </li>

                                            {{/ children}}
                                        </ul>
                                    </div>


                                {{/topic}}
                                </div>
                            </div>
                        </div>
                        <div class="furgan-Tabs-panel furgan-Tabs-panel--reviews panel entry-content furgan-tab"
                            id="tab-teacher" role="tabpanel" aria-labelledby="tab-title-reviews" style="display: none;">
                            <div class="row justify-content-around" id="yui_3_17_2_1_1588835496527_47">
                                <div class="col-xl-4 col-md-6 text-center mb-5 mb-md-0">
                                    <img class="img-fluid" src="{{{ config.wwwroot }}}/local/school/image.php?filename={{{course_desc.teacher_img}}}"
                                        alt="">
                                </div>
                                <div class="col-xl-5 col-md-6 py-md-5" id="yui_3_17_2_1_1588835496527_46">
                                    {{{course_desc.teacher_desc}}}
                                </div>
                            </div>
                        </div>
                        
                        
                    </div>
                </div>
            </div>
        </div>
        <div id="fb-root"></div>
        <div class="container" style="margin-top:50px;">
            <div class='fb-like' data-send="false" data-show-faces="false" data-action="like" data-width="350"
                data-share="true" data-href="{{{ config.wwwroot }}}?course_detail={{{shortname}}}"></div>
            <div class="fb-comments" data-href="{{{ config.wwwroot }}}?course_detail={{{shortname}}}" data-numposts="5" data-width="100%"
                data-action="like" data-share="true" data-order-by="reverse_time">
            </div>
        </div>
    </div>
</div>
